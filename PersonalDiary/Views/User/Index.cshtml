@model List<Diary>
@{
    ViewBag.Title = "我的博客";
}

<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <td colspan="5">
            <a href="@Url.Content("~/User/Create")">新建博客</a>
        </td>
    </tr>
    <tr>
        <td>标题</td>
        <td>作者</td>
        <td style="width:20%">发布日期</td>
        <td>操作</td>
    </tr>
    @foreach (var diary in Model)
    {
        <tr>
            <td>
                <a href="@Url.Content("~/Home/Show/"+@diary.Id)">@diary.Title</a>
            </td>
            <td>@diary.UserName</td>
            <td>@diary.PubDate</td>
            <td>
                <a href="@Url.Content("~/User/Remove/"+@diary.Id)">删除</a>
            </td>
        </tr>
    }
</table>
