@model List<Blog>
@{
    ViewBag.Title = "我的博客";
}

<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <td colspan="5">
            <a href="@Url.Content("~/User/Create")">新建博客</a>
        </td>
    </tr>
    <tr>
        <td>标题</td>
        <td>作者</td>
        <td style="width:20%">发布日期</td>
        <td>操作</td>
    </tr>
    @foreach (var blog in Model)
    {
        <tr>
            <td><a href="@Url.Content("~/Home/Show/"+@blog.Id)">@blog.Title</a></td>
            <td><a href="@Url.Content("~/User/Info/" + @blog.UserId)">@blog.UserName</a></td>
            <td>@blog.PubDate</td>
            <td><a href="@Url.Content("~/User/Remove/"+@blog.Id)">删除</a></td>
        </tr>
    }
</table>
