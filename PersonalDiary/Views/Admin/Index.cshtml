@model List<User>
@{
    ViewBag.Title = "用户管理";
}

<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <td>Id</td>
        <td>User</td>
        <td style="width:20%">密码</td>
        <td>操作</td>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.PassWord</td>
            <td><a href="@Url.Content("~/Admin/Remove/"+@user.Id)">删除</a></td>
        </tr>
    }


</table>